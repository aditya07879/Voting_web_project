<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>
<body class="bg-white text-slate-900">

  <%- include("./partials/nav") %>

  <main class="min-h-screen">

    <!-- HEADER STRIP -->
    <section class="bg-[#FBE8A6]">
      <div class="max-w-4xl mx-auto px-4 py-8">
        <h1 class="text-2xl md:text-3xl font-bold text-[#303C6C]">
          Your Profile
        </h1>
      </div>
    </section>

    <!-- USER CARD + INFO -->
    <section class="bg-white">
      <div class="max-w-4xl mx-auto px-4 py-10 space-y-6">

        <!-- User Card -->
        <div class="bg-[#D2FDFF] rounded-2xl p-6 flex items-center gap-4">
          <div class="w-16 h-16 rounded-full bg-[#B4DFE5] flex items-center justify-center text-lg font-bold text-[#303C6C]">
            U
          </div>
          <div>
            <h2 class="text-lg font-semibold text-[#303C6C]">
              <%= user && user.name ? user.name : "User Name" %>
            </h2>
            <p class="text-xs text-gray-700">
              <%= user && user.email ? user.email : "user@example.com" %>
            </p>
          </div>
        </div>

        <!-- Info fields -->
        <div class="bg-white rounded-xl border border-gray-100 p-5 space-y-4 text-sm">
          <div class="flex justify-between">
            <span class="text-gray-500">Registered since</span>
            <span class="text-[#303C6C]">2025</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500">Total votes cast</span>
            <span class="text-[#303C6C]">3</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-500">Last login</span>
            <span class="text-[#303C6C]">Today</span>
          </div>
        </div>

      </div>
    </section>

  </main>

  <%- include("./partials/footer") %>
  <%- include("./partials/script") %>
</body>
</html>
